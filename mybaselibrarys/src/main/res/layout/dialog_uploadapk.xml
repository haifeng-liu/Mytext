<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_400"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">
<ImageView
    android:id="@+id/img_logo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px_40"
    android:paddingBottom="@dimen/px_40"
    android:layout_gravity="center"
    android:src="@mipmap/ic_launcher"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_10"

        android:paddingRight="@dimen/px_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_676767"
           android:textSize="@dimen/px_24"
            android:text="版本："
            />
        <TextView
            android:id="@+id/tv_codenum"
            android:layout_width="wrap_content"
            android:textColor="@color/mask_color"
            android:textSize="@dimen/px_24"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_10"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_676767"
            android:textSize="@dimen/px_24"
            android:text="发布时间："
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:textColor="@color/mask_color"
            android:textSize="@dimen/px_24"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_676767"
            android:textSize="@dimen/px_24"
            android:text="大小："
            />
        <TextView
            android:id="@+id/tv_apksize"
            android:layout_width="wrap_content"
            android:textColor="@color/mask_color"
            android:textSize="@dimen/px_24"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="#EFEFEF"/>
    <TextView
        android:layout_marginTop="@dimen/px_10"
        android:paddingLeft="@dimen/px_20"
        android:text="更新内容:"
        android:textColor="@color/text_676767"
        android:textSize="@dimen/px_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_conter"
        android:layout_marginTop="@dimen/px_10"
        android:paddingLeft="@dimen/px_28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/mask_color"
        android:textSize="@dimen/px_20"/>

    <LinearLayout
        android:id="@+id/lin_btn"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_xczs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/px_10"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/mask_color"
            android:text="下次再说"/>
        <TextView
            android:layout_weight="1"
            android:textColor="@color/mask_color"
            android:textStyle="bold"

            android:id="@+id/tv_ljgx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_10"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="立即更新"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_bar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_height="wrap_content">
       <ProgressBar
           android:id="@+id/progressbar"
           android:layout_width="match_parent"
           android:layout_height="@dimen/px_8"
           android:max="100"
           android:paddingRight="@dimen/px_20"
           android:paddingLeft="@dimen/px_20"
           android:progressDrawable="@drawable/progress_bar_layer_list"
           style="?android:attr/progressBarStyleHorizontal"
           android:progress="0"

           />

    </LinearLayout>
</LinearLayout>
